@page
@model MyPortfolio.Pages.GitHubRequestPage.IndexModel
@{
}
<div class="container px-lg-5  px-md-3 px-2 my-5">
    <div class="row">
        <div class="col-12 mb-5">
            <div class="title-underlined position-relative d-inline">
                <h3 class="text-body font-monospace d-inline fw-bold ms-lg-0 ms-3">GitHub Requests</h3>
                <div class="position-absolute bg-color-theme ms-lg-0 ms-3"></div>
            </div>
        </div>
        <div class="col-12">
            <div class="p-2 rounded-3 bg-white shadow ">
                <div class="overflow-x-scroll remove-scrollbar px-1">
                    <table id="data-table" class="table table-striped table-hover w-100">
                        <thead class="bg-primary-subtle">
                            <tr>
                                <th>Id</th>
                                <th>Repository</th>
                                <th>GitHub Username</th>
                                <th>Status</th>
                                <th>Date/Time Requested</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody class="table-group-divider">
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<partial name="_RequestActionModal"/>
<partial name="_DeleteModal" />
@section Scripts{
    <script src="~/js/gitHubRequest.js" asp-append-version="true"></script>
}